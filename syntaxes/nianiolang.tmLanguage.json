{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "NianioLang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variants"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#modules"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#vars"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#fields"
		},
		{
			"include": "#references"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.nianiolang",
					"match": "\\b(uless|ref|as|is|eq|die|ensure|ne|else|elsif|use|fora|forh|def|match|case|try|if|while|for|return)\\b"
				}
			]
		},
		"references": {
			"patterns": [
				{
					"match": "(@[a-z:()_]+)",
					"name": "variable.name"
				}
			]
		},
		"fields": {
			"patterns": [
				{
					"match": "(->)",
					"name": "variable.name"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"match": "([0-9]+)",
					"name": "constant.numeric"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.nianiolang",
			"patterns": [
				{
					"match": "'(.*?)('|\n)",
					"name": "string.quoted.double.nianiolang"
				}
			]
		},
		"variants": {
			"patterns": [
				{
					"match": "( :[a-zA-Z0-9_]+)",
					"name": "storage.type"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"match": "(#.*)",
					"name": "comment"
				}
			]
		},
		"vars": {
			"patterns": [
				{
					"match": "\\b(var)\\b",
					"name": "constant.language"
				}
			]
		},
		"modules": {
			"patterns": [
				{
					"match": "\\b([a-z_0-9]+(?=:))\\b",
					"name": "entity.name.class"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"match": "([a-z_]*\\()",
					"name": "entity.name.function"
				}
			]
		}
	},
	"scopeName": "source.nianio"
}
